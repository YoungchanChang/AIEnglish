<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSplash">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_splash_background"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_symbole"
        android:layout_width="267dp"
        android:layout_height="216dp"
        app:layout_constraintBottom_toTopOf="@+id/img_background"
        app:layout_constraintEnd_toStartOf="@+id/img_background"
        app:layout_constraintStart_toEndOf="@+id/img_background"
        app:layout_constraintTop_toBottomOf="@+id/img_background"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/login_splash_img" />

    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="162dp"
        android:layout_height="78dp"
        android:fontFamily="@font/tvn_bold"
        android:gravity="center"
        android:text="@string/app_title"
        android:textColor="#0C0C0C"
        android:textSize="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756" />
</androidx.constraintlayout.widget.ConstraintLayout>