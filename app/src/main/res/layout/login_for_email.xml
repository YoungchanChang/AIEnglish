<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginForEmail">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="28dp"
        android:text="로그인"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_login_teacher"
        android:layout_width="276dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="36dp"
        android:text="선생님으로 로그인"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/registerMainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum"
            android:text="이메일로 로그인"
            android:textColor="@color/registerTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="14dp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="285dp"
        android:layout_height="155dp"
        android:layout_marginTop="84dp"
        android:background="#C3A2A2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main">

        <EditText
            android:id="@+id/edit_login_pwd"
            android:layout_width="197dp"
            android:layout_height="32dp"
            android:layout_marginTop="39dp"
            android:background="#000000"
            android:drawableLeft="@drawable/ic_action_password"
            android:ems="15"
            android:hint="비밀번호"
            android:inputType="textPersonName|textPassword"
            android:maxLength="15"
            android:textColor="@color/colorWhite"
            android:textColorHint="#A39B9B"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_login_email" />

        <EditText
            android:id="@+id/edit_login_email"
            android:layout_width="197dp"
            android:layout_height="25dp"
            android:layout_marginTop="32dp"
            android:background="#000000"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="20"
            android:hint="이메일"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:textColor="@color/colorWhite"
            android:textColorHint="#A39B9B"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_id_find"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:text="아이디찾기"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_pwd_find"
            android:layout_width="91dp"
            android:layout_height="37dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:text="비밀번호 찾기"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/btn_id_find"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="329dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="167dp"
            android:layout_height="19dp"
            android:layout_marginStart="32dp"
            android:text="아직 계정이 없으신가요?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="278dp"
        android:layout_height="39dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="99dp"
            android:layout_height="21dp"
            android:layout_marginStart="32dp"
            android:text="선생님이신가요?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_teacher_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선생님 로그인"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>