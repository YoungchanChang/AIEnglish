<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSpecificInfo">

    <Button
        android:id="@+id/btn_nickname"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/register_drawable_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_specific_complete"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:background="@drawable/register_drawable_enable"
        android:enabled="false"
        android:text="@string/btn_complete"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_main"
        app:srcCompat="@drawable/login_btn_email" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/register_btn_sequence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main">

        <TextView
            android:id="@+id/text_result_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 / 4"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/registerMainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum"
            android:text="세부정보입력"
            android:textColor="@color/registerTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="14dp" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/login_btn_email"
        android:drawableLeft="@drawable/ic_action_nickname"
        android:ems="10"
        android:hint="닉네임을 입력해주세요"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#A39B9B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <DatePicker
        android:id="@+id/simple_datepicker"
        android:layout_width="254dp"
        android:layout_height="151dp"
        android:layout_marginTop="340dp"
        android:background="#D8D4D4"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="254dp"
        android:layout_height="28dp"
        android:layout_marginTop="312dp"
        android:background="#000000"
        android:drawableLeft="@drawable/ic_action_calendar"
        android:text="생일을 입력해주세요"
        android:textAlignment="gravity"
        android:textColor="#A39B9B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_profile_img"
        android:layout_width="129dp"
        android:layout_height="103dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="132dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/register_img_user" />

    <TextView
        android:id="@+id/text_input_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="클릭하여 프로필 사진을 입력하세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_main" />


</androidx.constraintlayout.widget.ConstraintLayout>