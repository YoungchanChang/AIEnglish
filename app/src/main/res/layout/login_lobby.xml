<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    tools:context=".LoginLobby">


    <Button
        android:id="@+id/btn_email_login"
        android:layout_width="281dp"
        android:layout_height="53dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/login_btn_email"
        android:text="@string/Login"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="360dp"
        android:layout_height="640dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_app_name"
        android:layout_width="248dp"
        android:layout_height="181dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background"
        app:srcCompat="@drawable/login_img_app_name"></ImageView>

    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="162dp"
        android:layout_height="78dp"
        android:fontFamily="@font/tvn_bold"
        android:gravity="center"
        android:text="@string/app_title"
        android:textColor="#0C0C0C"
        android:textSize="56dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="@+id/img_app_name"
        app:layout_constraintTop_toTopOf="@+id/img_app_name"
        app:layout_constraintVertical_bias="0.456" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/login_button"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="333dp"
        android:layout_height="36dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:text="회원가입"
            android:textColor="#FFFEFE"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_subinfo" />

        <TextView
            android:id="@+id/text_subinfo"
            android:layout_width="148dp"
            android:layout_height="21dp"
            android:layout_marginStart="56dp"
            android:text="아직 계정이 없으신가요?"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>